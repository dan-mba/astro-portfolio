---
import DesktopNav from './DesktopNav.astro';
const base = import.meta.env.BASE_URL;
---
<header class="sticky w-full bg-primary-950 text-primary-200">
  <div class="max-w-screen-xl w-full mx-auto px-[1%]">
    <div id="skip">
      <a href="#maincontent" class="text-xl px-1.5 py-3">Skip to content</a>
    </div>
    <nav class="flex">
      <a href={`${base}`} class="hover:text-secondary-300">
        <div class="text-5xl font-hw min-w-[100px]">Dan</div>
      </a>
      <DesktopNav />
    </nav>
  </div>
</header>
<style>
#skip a {
  display: block;
  position: absolute;
  left: -999px;
  top: -999px;
}

#skip a:focus {
  left: 0;
  top: 0;
}
</style>