  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 5,
  "rangeStrategy": "bump",
  "schedule": ["before 4am on Monday"],
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "1 day"
    }
  ]
}
